
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Crear partido</h3>
  </div>
  <div class="panel-body">
    <%= form_with model: @game, url: [@group, @game], local: true do |form| %>
      <% if @game.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@game.errors.count, "error") %> oeoe</h2>

          <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :game_date, "Fecha de juego" %>
            <%= form.date_field :game_date_date, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :game_time, "Hora de juego" %>
            <%= form.time_field :game_date_time, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :place, "Lugar" %>
            <%= form.text_field :place, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :limit_users, "LÃ­mite de jugadores" %>
            <%= form.text_field :limit_users, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= form.submit "Aceptar", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
  <%= link_to 'AtrÃ¡s', :back %>
</div>

