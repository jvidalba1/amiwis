
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Iniciar sesi칩n</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password, "Contrase침a" %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Recordar" %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Aceptar", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= link_to "Registrarte", new_registration_path(resource_name), class: "btn btn-link" %><br />
          <%= link_to "Olvidaste tu contrase침a?", new_password_path(resource_name), class: "btn btn-link" %><br />

          <div class="row LoginCard">
            <div class="col-xs-6 col-xs-offset-3">
              <%= link_to "Iniciar sesi칩n con Facebook",
                  user_facebook_omniauth_authorize_url,
                  class: "btn btn-lg btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
